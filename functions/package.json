{
  "name": "journey-home-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Journey Home app",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec --require ts-node/register test/**/*.test.ts",
    "test:watch": "mocha --reporter spec --require ts-node/register --watch test/**/*.test.ts",
    "test:coverage": "nyc mocha --reporter spec --require ts-node/register test/**/*.test.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.0",
    "chai": "^4.3.0",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^17.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
